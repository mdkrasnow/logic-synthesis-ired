{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Code Review Finding Output",
  "type": "object",
  "required": ["round", "reviewer_id", "focus", "timestamp", "findings"],
  "properties": {
    "round": {"type": "integer", "enum": [1, 2, 3]},
    "reviewer_id": {"type": "string"},
    "focus": {"type": "string", "enum": ["security", "correctness", "performance", "maintainability"]},
    "timestamp": {"type": "string", "format": "date-time"},
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "severity", "category", "file", "line_start", "issue", "impact", "proposed_fix"],
        "properties": {
          "id": {"type": "string"},
          "severity": {"type": "string", "enum": ["critical", "high", "medium", "low"]},
          "category": {"type": "string"},
          "file": {"type": "string"},
          "line_start": {"type": "integer"},
          "line_end": {"type": "integer"},
          "issue": {"type": "string"},
          "impact": {"type": "string"},
          "evidence": {"type": "string"},
          "proposed_fix": {
            "type": "object",
            "required": ["strategy", "old_code", "new_code", "confidence"],
            "properties": {
              "strategy": {"type": "string"},
              "old_code": {"type": "string"},
              "new_code": {"type": "string"},
              "confidence": {"type": "number", "minimum": 0, "maximum": 1}
            }
          }
        }
      }
    }
  }
}